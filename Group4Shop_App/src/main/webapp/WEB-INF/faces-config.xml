<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.0"
              xmlns="http://java.sun.com/xml/ns/javaee" 
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">

    <!-- Main menu on all pages -->
    <navigation-rule>
        <from-view-id>*</from-view-id> 
        <navigation-case>
            <from-outcome>home</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>products</from-outcome>
            <to-view-id>/content/products.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>blog</from-outcome>
            <to-view-id>/content/blog.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>contact</from-outcome>
            <to-view-id>/content/contact.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>about</from-outcome>
            <to-view-id>/content/about/about.xhtml</to-view-id>
        </navigation-case>
      <navigation-case>
            <from-outcome>aboutcompany</from-outcome>
            <to-view-id>/content/about/aboutcompany.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>aboutgroup4</from-outcome>
            <to-view-id>/content/about/aboutgroup4.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>aboutproducts</from-outcome>
            <to-view-id>/content/about/aboutproducts.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>termsandconditions</from-outcome>
            <to-view-id>/content/about/termsandconditions.xhtml</to-view-id>
        </navigation-case>
      
      
      
      
        <navigation-case>
            <from-outcome>login</from-outcome>
            <to-view-id>/content/login/login.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>cart</from-outcome>
            <to-view-id>/content/checkout/checkout.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>pendingtransaction</from-outcome>
            <to-view-id>/content/checkout/pendingtransaction.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>customer</from-outcome>
            <to-view-id>/content/user/customerhome.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <!-- Product pages -->
    <navigation-rule>
        <from-view-id>/content/products.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>info</from-outcome>
            <to-view-id>/content/infoProduct.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <!-- From login -->
    <navigation-rule>
        <from-view-id>/content/login/login.xhtml</from-view-id> 
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/content/user/customerhome.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>failed</from-outcome>
            <to-view-id>/content/login/login.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <!-- From About -->
    
    

    
</faces-config>
